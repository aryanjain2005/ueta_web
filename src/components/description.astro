---
import { DescriptionBox } from "../utils/DescriptionBox";
interface Props {
  title: string;
  description: string;
  image?: string;
  class?: string;
}

const { title, description, image, class: className } = Astro.props;
---

<div class:list={["w-full flex items-center", className]}>
  <div
    class="flex flex-row px-8 w-full py-8 gap-10 md:gap-20 items-center justify-center">
    <!-- LEFT: image + title -->
    <div
      class="flex flex-col items-center justify-center gap-3
             w-[160px] md:w-[220px] lg:w-[260px] flex-shrink-0">
      <img
        src={image || "imgg.png"}
        alt={title}
        class="rounded-2xl object-contain bg-white
               w-[130px] h-[130px]
               xs:w-[150px] xs:h-[150px]
               md:w-[180px] md:h-[180px]
               lg:w-[200px] lg:h-[200px]"
        loading="lazy"
      />
      <h2
        class="w-full font-bold tracking-tight
               text-lg xs:text-2xl md:text-3xl lg:text-4xl
               text-center">
        {title}
      </h2>
    </div>

    <!-- RIGHT: description + slot -->
    <div
      class="space-y-2 md:space-y-6 grow w-full h-full
        overflow-hidden">
      <DescriptionBox client:load text={description} />
      <slot />
    </div>
  </div>
</div>
