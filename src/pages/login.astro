---
import Layout from "@layouts/Layout.astro";
import LoginForm from "@components/LoginForm";
---

<Layout title="Login">
  <div
    class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50 flex items-center justify-center py-12 px-4">
    <div
      class="max-w-md w-full space-y-8 bg-white/80 backdrop-blur-xl rounded-3xl shadow-2xl border border-white/50 p-8 md:p-12">
      {/* Panda Header */}
      <div class="text-center space-y-4">
        <div
          class="w-24 h-24 bg-gradient-to-r from-yellow-400 to-orange-400 rounded-3xl shadow-lg flex items-center justify-center relative overflow-hidden mx-auto mb-6">
          <svg
            class="w-16 h-16 text-white drop-shadow-lg"
            fill="currentColor"
            viewBox="0 0 24 24">
            <path
              d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"
            ></path>
          </svg>
          <div
            class="absolute -bottom-2 -right-2 w-12 h-12 bg-gradient-to-r from-pink-400 to-rose-400 rounded-2xl shadow-md">
          </div>
        </div>
        <div>
          <h1
            class="text-4xl md:text-5xl font-black bg-gradient-to-r from-[#0046BE] via-blue-600 to-indigo-700 bg-clip-text text-transparent font-gr">
            PandaLogin
          </h1>
          <p class="text-gray-600 text-lg mt-2">Welcome back! üêº</p>
        </div>
      </div>

      {/* Interactive Form Card */}
      <div class="relative group">
        <div
          class="absolute inset-0 bg-gradient-to-r from-blue-500/10 to-indigo-500/10 rounded-2xl blur opacity-75 group-hover:opacity-100 transition-all duration-500">
        </div>
        <div
          class="relative bg-gradient-to-b from-white/90 to-gray-50/90 backdrop-blur-xl rounded-2xl p-8 border border-white/50 shadow-xl group-hover:shadow-2xl transition-all duration-500 hover:-translate-y-1">
          <div class="space-y-6">
            <LoginForm client:load />
          </div>

          {/* Interactive Sign Up */}
          <div class="pt-8 border-t border-gray-200/50">
            <div class="text-center group/signup">
              <p class="text-gray-700 mb-4 text-sm md:text-base">
                Don't have an account yet?
              </p>
              <a
                href="/signup"
                class="group-hover/signup inline-flex items-center gap-3 px-6 py-3 bg-gradient-to-r from-[#0046BE] to-blue-600 hover:from-blue-600 hover:to-indigo-700 text-white font-semibold rounded-2xl text-sm md:text-base shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 border border-transparent hover:border-white/20">
                <span>üêº Create Account</span>
                <svg
                  class="w-4 h-4 group-hover/signup:translate-x-1 transition-transform"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>

      {/* Subtle footer panda */}
      <div class="text-center text-xs text-gray-500 pt-8 opacity-75">
        <p>Powered by PandaAuth ‚ú®</p>
      </div>
    </div>
  </div>
</Layout>
